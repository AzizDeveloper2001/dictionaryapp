<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="27.09.2021"
        android:gravity="center"
        android:textColor="#434141"
        android:textSize="17sp"
        android:id="@+id/date"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wordname"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:gravity="center"
        android:text="Flag"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/wordname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/copy"
            android:text="Copy"

            android:focusable="true"
            android:clickable="true"
            android:paddingTop="12dp"
            android:background="@drawable/back_day"

            android:gravity="center"
            android:textColor="#BFAB9F"
            android:textSize="17sp"
            android:id="@+id/copy"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/audio"
            android:text="Audio"

            android:clickable="true"
            android:paddingTop="12dp"
            android:background="@drawable/back_day"
            android:gravity="center"
            android:textColor="#BFAB9F"
            android:textSize="17sp"
            android:id="@+id/audio"
            android:layout_margin="5dp"
            android:focusable="true" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:background="@drawable/editback"
              android:orientation="vertical"
            android:layout_margin="5dp">
            <com.like.LikeButton
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                app:icon_size="30dp"
                app:like_drawable="@drawable/saveonline"
                app:unlike_drawable="@drawable/sav"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Save"
                android:textColor="#BFAB9F"
                android:textSize="17sp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_share"
            android:text="Share"
            android:gravity="center"
            android:textColor="#BFAB9F"
            android:textSize="17sp"
            android:id="@+id/share"
            android:paddingTop="12dp"
            android:background="@drawable/back_day"

            android:clickable="true"
            android:focusable="true"
            android:layout_margin="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>